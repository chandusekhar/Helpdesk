@page
@model Helpdesk.Pages.People.EditModel

@{
    ViewData["Title"] = $"Edit {@Model.Input.DisplayName}";
}

<br />
<div class="text-center">
    <h1 class="display-4">Edit @Model.Input.DisplayName</h1>
</div>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="userprofile-tab" data-bs-toggle="tab" data-bs-target="#userprofile" type="button" role="tab" aria-controls="userprofile" aria-selected="true">User&nbsp;Profile</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="team-tab" data-bs-toggle="tab" data-bs-target="#team" type="button" role="tab" aria-controls="team" aria-selected="true">Team</button>
    </li>
    @if(@Model.Input.Licenses.Count() > 0)
    {
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="userlicense-tab" data-bs-toggle="tab" data-bs-target="#userlicense" type="button" role="tab" aria-controls="userlicense" aria-selected="false">Licenses</button>
        </li>
    }
    @if (@ViewData.ContainsKey("ShowUserRoleAdmin") && @Model.Input.UserRoles != null)
    {
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="userroles-tab" data-bs-toggle="tab" data-bs-target="#userroles" type="button" role="tab" aria-controls="userroles" aria-selected="false">Roles</button>
        </li>
    }
</ul>
<form method="post" class="g-3">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="userprofile" role="tabpanel" aria-labelledby="userprofile-tab">
            <div class="border container" style="padding:30px;">
                <div class="row col-md-12">
                    <span class="h3">User Profile</span>
                </div>
                <input type="hidden" asp-for="Input.Id" />
                <div class="row col-md-12 text-center">
                    <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.DisplayName" class="form-control" />
                            <label asp-for="Input.DisplayName" class="form-label"></label>
                            <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.GivenName" class="form-control" />
                            <label asp-for="Input.GivenName" class="form-label"></label>
                            <span asp-validation-for="Input.GivenName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Surname" class="form-control" />
                            <label asp-for="Input.Surname" class="form-label"></label>
                            <span asp-validation-for="Input.Surname" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.JobTitle" class="form-control" />
                            <label asp-for="Input.JobTitle" class="form-label"></label>
                            <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Company" class="form-control" />
                            <label asp-for="Input.Company" class="form-label"></label>
                            <span asp-validation-for="Input.Company" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Input.SiteNavTemplateName" class="form-control">
                                @foreach (var opt in Model.SiteNavTemplates)
                                {
                                    if (@opt == @Model.Input.SiteNavTemplateName)
                                    {
                                        <option value="@opt" selected>@opt</option>
                                    }
                                    else
                                    {
                                        <option value="@opt">@opt</option>
                                    }
                                }
                            </select>
                            <label asp-for="Input.SiteNavTemplateName" class="form-label"></label>
                            <span asp-validation-for="Input.SiteNavTemplateName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Input.Enabled" class="form-control">
                                @foreach (var opt in Model.EnabledOptions)
                                {
                                    if (@opt == @Model.Input.Enabled)
                                    {
                                        <option value="@opt" selected>@opt</option>
                                    }
                                    else
                                    {
                                        <option value="@opt">@opt</option>
                                    }
                                }
                            </select>
                            <label asp-for="Input.Enabled" class="form-label"></label>
                            <span asp-validation-for="Input.Enabled" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Input.Group" class="form-control">
                                @foreach (var opt in Model.GroupOptions)
                                {
                                    if (@opt == @Model.Input.Group)
                                    {
                                        <option value="@opt" selected>@opt</option>
                                    }
                                    else
                                    {
                                        <option value="@opt">@opt</option>
                                    }
                                }
                            </select>
                            <label asp-for="Input.Group" class="form-label"></label>
                            <span asp-validation-for="Input.Group" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        &nbsp;&nbsp;
                        <a class="btn btn-secondary" asp-page="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="team" role="tabpanel" aria-labelledby="team-tab">
            <div class="border container" style="padding:30px;">
                <div class="row">
                    <div class="col-md-12">
                        <span class="h3">Team Members</span>
                    </div>
                </div>
                <br />
                <h4>@Model.Input.DisplayName's Supervisors</h4>
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary" href="AddSupervisor?id=@Model.Input.Id" >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                                <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                            </svg>
                            &nbsp; Add A Supervisor</a>
                    </div>
                </div>
                <br />
                <div class="accordion accordion-flush" id="supaccordion">
                    @for (int i = 0; i < @Model.Input.Supervisors.Count(); i++)
                    {
                        string heading = string.Format("flush-headingsup{0}", i.ToString());
                        string collapse = string.Format("collapsesup{0}", i.ToString());
                        string hashcollapse = string.Format("#collapsesup{0}", i.ToString());
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@heading">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@hashcollapse" aria-expanded="false" aria-controls="@collapse">
                                    <text>@Model.Input.Supervisors[i].DisplayName</text>
                                </button>
                            </h2>
                        </div>
                        <div id="@collapse" class="accordion-collapse collapse" aria-labelledby="@heading" data-bs-parent="#supaccordion">
                            <div class="accordion-body">
                                <p>This supervisor's responsibilities</p>
                                @foreach (var item in @Model.Input.Supervisors[i].Responsibilities)
                                {
                                    <p>@item.Display <a href="RemoveSupervisorResponsibility?id=@item.Id" class="btn-sm btn btn-danger">Remove Responsibility</a></p>
                                }
                                <p><a class="btn btn-sm btn-danger" href="RemoveSupervisor?id=@Model.Input.Supervisors[i].Id">Remove Supervisor</a></p>
                            </div>
                        </div>
                    }
                </div>
                <br />
                <br />
                
                <h4>@Model.Input.DisplayName Supervises the following people</h4>
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary" href="AddSubordinate?id=@Model.Input.Id" >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                                <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                            </svg>
                            &nbsp; Add A Subordinate</a>
                    </div>
                </div>
                <br />
                <div class="accordion accordion-flush" id="subaccordian">
                    @for (int i = 0; i < @Model.Input.Subordinates.Count(); i++)
                    {
                        string heading = string.Format("heading{0}", i.ToString());
                        string collapse = string.Format("collapse{0}", i.ToString());
                        string hashcollapse = string.Format("#collapse{0}", i.ToString());
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@heading">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@hashcollapse" aria-expanded="false" aria-controls="@collapse">
                                    <text>@Model.Input.Subordinates[i].DisplayName</text>
                                </button>
                            </h2>
                        </div>
                        <div id="@collapse" class="accordion-collapse collapse" aria-labelledby="@heading" data-bs-parent="#subaccordian">
                            <div class="accordion-body">
                                @foreach (var item in @Model.Input.Subordinates[i].Responsibilities)
                                {
                                    <p>@item.Display <a class="btn-sm btn btn-danger" href="RemoveSubordinateResponsibility?id=@item.Id" >Remove Responsibility</a></p>
                                }
                                <p><a class="btn btn-sm btn-danger" href="RemoveSubordinate?id=@Model.Input.Subordinates[i].Id">Remove Subordinate</a></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    @if (@Model.Input.Licenses.Count() > 0)
    {
        <div class="tab-pane fade" id="userlicense" role="tabpanel" aria-labelledby="userlicense-tab">
            <div class="border container" style="padding:30px;">
                <div class="row">
                    <div class="col-md-12">
                        <span class="h3">User License</span>
                    </div>
                </div>
                @for (int i = 0; i < @Model.Input.Licenses.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.Input.Licenses[i].Id" />
                    <input type="hidden" asp-for="@Model.Input.Licenses[i].PreviouslyAdded" />
                    <input type="hidden" asp-for="@Model.Input.Licenses[i].LicenseTypeId" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-check-inline form-switch">
                                <input class="form-check-input" type="checkbox" data-toggle="toggle" asp-for="@Model.Input.Licenses[i].Added" />
                                &nbsp;
                                <span>@Model.Input.Licenses[i].Name</span>
                            </div>
                        </div>
                    </div>
                    @if (@Model.Input.Licenses[i].ShowProductCode)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control" asp-for="@Model.Input.Licenses[i].ProductCode" />
                            </div>
                        </div>
                    }
                }
                <br />
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        &nbsp;&nbsp;
                        <a class="btn btn-secondary" asp-page="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (@ViewData.ContainsKey("ShowUserRoleAdmin") && @Model.Input.UserRoles != null)
    {
        <div class="tab-pane fade" id="userroles" role="tabpanel" aria-labelledby="userroles-tab">
            <div class="border container" style="padding:30px;">
                <div class="row">
                    <div class="col-md-12">
                        <span class="h3">User Roles</span>
                    </div>
                </div>
                @for (int i = 0; i < @Model.Input.UserRoles.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.Input.UserRoles[i].PreviouslyAdded" />
                    <input type="hidden" asp-for="@Model.Input.UserRoles[i].RoleName " />
                    <input type="hidden" asp-for="@Model.Input.UserRoles[i].RoleDescription " />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-check-inline form-switch">
                                <input class="form-check-input" type="checkbox" data-toggle="toggle" asp-for="@Model.Input.UserRoles[i].Added" />
                                &nbsp;
                                <span>@Model.Input.UserRoles[i].RoleName</span>
                                <span>(@Model.Input.UserRoles[i].RoleDescription)</span>
                            </div>
                        </div>
                    </div>
                    <br />
                }
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        &nbsp;&nbsp;
                        <a class="btn btn-secondary" asp-page="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
