@page
@model Helpdesk.Pages.LicenseTypes.EditModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<h1 class="display-4">Edit a License Type</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.Id" />
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Description" class="form-control" />
                <label asp-for="Input.Description" class="form-label"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Seats" class="form-control" />
                <label asp-for="Input.Seats" class="form-label"></label>
                <span asp-validation-for="Input.Seats" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <select asp-for="Input.Status" class="form-control">
                        @foreach(var opt in Model.LicenseStatusOptions)
                        {
                            if (@opt == @Model.Input.Status)
                            {
                                <option value="@opt" selected>@opt</option>
                            }
                            else
                            {
                                <option value="@opt">@opt</option>
                            }
                        }
                    </select>
                    <label asp-for="Input.Status" class="form-label"></label>
                    <span asp-validation-for="Input.Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.IsDeviceLicense" /> @Html.DisplayNameFor(model => model.Input.IsDeviceLicense)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.IsUserLicense" /> @Html.DisplayNameFor(model => model.Input.IsUserLicense)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.DeviceRequireProductCode" /> @Html.DisplayNameFor(model => model.Input.DeviceRequireProductCode)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.UserRequireProductCode" /> @Html.DisplayNameFor(model => model.Input.UserRequireProductCode)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@Model.Input.Id">Delete</a>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
